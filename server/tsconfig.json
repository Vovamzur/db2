{
  "compileOnSave": true,
  "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "target": "es5",
      "declaration": true,
      "noImplicitAny": true,
      "removeComments": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "rootDir": "./",
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*",
              "@types/*.d.ts"
          ]
      }
  }
}